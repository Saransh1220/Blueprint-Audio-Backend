# Environment Configuration
# Copy this to .env and update with your values

# Server
PORT=8080
ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=redwave

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# S3/MinIO (Local Development)
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=redwave-assets
S3_USE_SSL=false
S3_REGION=us-east-1

# S3 (Production - AWS)
# Uncomment and use these for production deployment
# S3_ENDPOINT=s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key-id
# S3_SECRET_KEY=your-aws-secret-access-key
# S3_BUCKET=redwave-production
# S3_USE_SSL=true
# S3_REGION=ap-south-1

# Razorpay (Test credentials for development)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_test_secret_key

# Razorpay (Production credentials)
# RAZORPAY_KEY_ID=rzp_live_your_key_id
# RAZORPAY_KEY_SECRET=your_live_secret_key

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (SendGrid)
SENDGRID_API_KEY=SG.your-api-key

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4000

# Rate Limiting
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_AUTHENTICATED=1000
